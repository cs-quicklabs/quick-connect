<main class="max-w-4xl px-4 pt-10 pb-12 mx-auto space-y-4 lg:pb-16"  data-controller="show-graph">
  <div class="px-4  sm:flex sm:items-center sm:justify-between sm:px-6 py-6">
    <div class="flex-auto min-w-0 break-words" id="title">
      <h3 class="text-2xl font-bold leading-tight text-gray-900 flex-none mt-4" data-target="show-graph.title">
        Contacts Addition Report
      </h3>
    </div>
    <div class="relative inline-block text-left" data-controller="dropdown" >
      <div>
        <button type="button" data-action="click->dropdown#toggle click@window->dropdown#hide" class="inline-flex w-full justify-center gap-x-1.5 rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" id="menu-button" aria-expanded="true" aria-haspopup="true">
          Filter By
          <svg class="-mr-1 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>
      <div data-dropdown-target="menu" class="absolute right-0 z-10 mt-2 w-56 origin-top-right rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1">
        <div class="py-1" role="none">
          <!-- Active: "bg-gray-100 text-gray-900", Not Active: "text-gray-700" -->
          <a href="<%= contacts_addition_report_weekly_path %>"
          data-selected="false"  data-show-graph-target="selected" data-title="Weekly"
    data-action="click->show-graph#toggleSelected" class="text-gray-700 block px-4 py-2 text-sm" role="menuitem" tabindex="-1" id="menu-item-0">Weekly</a>
          <a href="<%= contacts_addition_report_monthly_path %>" class="text-gray-700 block px-4 py-2 text-sm"
             data-selected="false" data-show-graph-target="selected"  data-title="Monthly"
    data-action="click->show-graph#toggleSelected"  role="menuitem" tabindex="-1" id="menu-item-1">Monthly</a>
          <a href="<%= contacts_addition_report_all_path %>"
             data-selected="false"  data-show-graph-target="selected" data-title="All"
    data-action="click->show-graph#toggleSelected"  class="text-gray-700 block px-4 py-2 text-sm" role="menuitem" tabindex="-1" id="menu-item-3">All </a>
        </div>
      </div>
    </div>
  </div>
  <div data-target="show-graph.details">
    <canvas 
  data-controller="chart"
  data-chart-data-value='{ "labels": ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"], "datasets":
  [{ "label": "Add contacts Report", "backgroundColor": "transparent", "borderColor": "#3B82F6", "data": <%= @add_contacts_report %> }] }'
></canvas>
  </div>
</div>
<main>
