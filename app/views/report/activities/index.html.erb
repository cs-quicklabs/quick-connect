<main class="max-w-4xl px-4 pt-10 pb-12 mx-auto space-y-4 lg:pb-16">
  <div class="flex-auto min-w-0 break-words" id="title">
    <h3 class="text-2xl font-bold leading-tight text-gray-900 flex-none mt-4" data-target="show-graph.title">
      <%=display_title(@type)%> Consistency Report
    </h3>
  </div>
  <div class="flex justify-center" data-controller="graph" data-graph-url-value=<%= activities_reports_path(format: :json, type: @type) %>>
    <canvas data-graph-target="graph">
    </canvas>
  </div>
</main>
