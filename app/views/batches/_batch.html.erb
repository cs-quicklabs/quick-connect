<%= turbo_frame_tag dom_id(batch) do %>
  <li class="flex py-3 border-b border-gray-200 cursor-pointer px-2 <%= "bg-gray-200" if params[:batch_id].to_i == batch.id %> ">
    <div class="flex  w-full  " >
      <a class="inline-flex w-11/12 hover:underline" href="<%= batches_path(batch_id: batch.id) %>" data-turbo-frame="_top" >
        <p class=" w-11/12  text-sm font-medium text-gray-900" >
          <%= batch.name.titleize %></p>
      </a>
      <div class="flex justify-end space-x-1">
        <%= edit_button("groups/#{batch.id}/edit") %>
        <a class="btn-inline-delete" data-controller="confirmation" data-turbo-frame="_top" data-turbo-method="delete" data-confirmation-message-value="Are you sure you want to delete this?" data-action="confirmation#confirm" href=<%= "groups/#{batch.id}" %>>Delete</a>
      </div>
    </div>
  </li>
<% end %>
