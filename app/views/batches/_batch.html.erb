<%= turbo_frame_tag dom_id(batch) do %>
  <li class="flex py-3 border-b border-gray-200 cursor-pointer px-2 " data-controller="counter" >
    <div class="flex  w-full  " >
      <a  id="group_<%= batch.id %>" class="inline-flex w-full hover:underline"  data-reflex="click->Batch#show" data-batch-id="<%= batch.id %>">
        <p class=" w-full  text-sm font-medium text-gray-900" >
          <%= batch.name.titleize %></p>
      </a>
      <div class="flex justify-end space-x-2">
        <%= edit_button(edit_batch_path(batch)) %>
           <%= link_to "Delete", " #", class: "btn-inline-delete", data: {
                                          controller: "confirmation",
                                          "confirmation-message-value": "Are you sure you want to delete group",
                                          action: "confirmation#confirm", reflex: "click->Batch#destroy", batch: batch.id
                                        } %>
      </div>
    </div>
  </li>
<% end %>
