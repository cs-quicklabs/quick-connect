<%= turbo_frame_tag dom_id(@batch) do %>
  <%= form_with(model: @batch, id: dom_id(@batch), url: batch_path(@batch)) do |form| %>
    <div class="mt-4 text-sm text-red-700">
      <% if local_assigns[:messages] && defined?(messages) && !messages.nil? %>
        <ul class=" space-y-1 pt-1">
          <% messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
     <li class="flex w-full py-4 border-b border-gray-200">
      <div class="flex-1 min-w-0 w-full " >
   <label for="group" class="block  text-sm font-medium text-gray-700    " >Edit Group</label>
  <div class=" flex  ">
 
                <div class="flex-1 "  >
               
                     <%= form.text_field :name,  autocomplete: "off", class: "form-text-field mt-1" %>
               
                  </div>
                  <div class="flex justify-end">  
      <%= form.submit "Add", class: "btn-blue" %>
    </div>
                </div>
</div>
    </li>
  <% end %>
<% end %>
