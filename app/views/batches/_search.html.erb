<%=form_with(url: "/#{batch.account.id}/batches/#{batch.id}/add", id: "search") do |form|%>
              <div class=" flex space-x-4 ">
                <div class="flex-1 min-w-0" x-data="{ isShowing: true}" data-behavior="autocomplete" data-controller="nav-search" data-nav-search-url-value="/search/add?batch_id=<%=batch.id%>" >
                  <label for="search" class="block  text-sm font-medium text-gray-700   " >Search To Add Contact</label>
                         <div class=" flex mt-1">
                  <div class="flex flex-1 relative rounded-md shadow-sm"   >
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                      <!-- Heroicon name: solid/search -->
                      <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
                      </svg>
                    </div>
                    <input type="search" name="search" id="search" class="block w-full  pl-10 form-text-field " placeholder="Search" data-nav-search-target="input" @keyup="isShowing = true" >
               
                  </div>
                    <%=form.hidden_field :search_id%>
                  <div class="flex justify-end">  
      <%= form.submit "Add", class: "btn-blue" %>
    </div>
                </div>
                  <div class="relative"  x-show="isShowing" >
                    <div  class="absolute left-0 z-10 block w-full mt-2 origin-top-right bg-white rounded-md shadow-lg  focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="options-menu">
                      <ul data-nav-search-target="results" >
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% end %>