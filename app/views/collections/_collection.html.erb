<%= turbo_frame_tag dom_id(collection) do %>
  <div id ="collections">
    <li class="flex py-3 border-b border-gray-200 cursor-pointer px-2 <%= "bg-gray-100" if params[:collection_id].present? && params[:collection_id].to_i == collection.id %>" >
      <div class="flex  w-full  " >
        <a  id="collection_<%= collection.id %>" href="<%= collections_path(collection_id: collection.id) %>" class="inline-flex w-11/12 hover:underline" data-turbo-frame="_top" >
          <p class=" w-11/12  text-sm font-medium text-gray-900" >
            <%= collection.name.titleize %></p>
        </a>
        <div class="flex justify-end space-x-1">
          <%= edit_button("collections/#{collection.id}/edit") %>
          <a class="btn-inline-delete" data-controller="confirmation" data-turbo-frame="_top" data-turbo-method="delete" data-confirmation-message-value="Are you sure you want to delete this?" data-action="confirmation#confirm" href=<%= "collections/#{collection.id}" %>>Delete</a>
        </div>
      </div>
    </li>
  </div>
<% end %>