<li class="py-3 flex  border-gray-200 border-b" id="<%= dom_id journal %>" >
  <div class="w-full">
    <a href="<%= journal_path(journal)%>" class="block hover:underline" target="_top">
      <p class="text-sm font-medium text-gray-900">  <%= journal.title.upcase_first %></p>
    </a>
    <div class=" mt-1 text-sm font-normal text-gray-500 line-clamp-2">
      <%=journal.body.upcase_first%>
    </div>
    <div class=" w-full  flex">
      <span class="inline-flex items-center mt-1 text-sm text-gray-500"><%= display_created_at(journal) %></span>
    </div>
  </div>
  <div class="flex align-right">
    <div class="px-6 py-3 whitespace-nowrap  text-sm font-medium">
      <% if policy(journal).edit? %>
        <%= edit_button(edit_journal_path(journal)) %>
      <% end %>
      <% if policy(journal).destroy? %>
        <%= delete_button(journal_path(journal)) %>
      <% end %>
    </div>
  </li>
