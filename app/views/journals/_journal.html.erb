<li class="relative bg-white py-5 px-4 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 hover:bg-gray-50" id="<%= dom_id journal %>" >
  <div class="flex justify-between space-x-3">
    <div class="min-w-0 flex-1">
      <a href="<%=journal_path(journal)%>" class="block focus:outline-none" target="_top">
        <span class="absolute inset-0" aria-hidden="true"></span>
        <p class="truncate text-sm font-medium text-gray-900"> <%= journal.title.upcase_first %></p>
        <p class="truncate text-sm text-gray-500"> <%= journal.body.upcase_first %></p>
      </a>
    </div>
    <div class="whitespace-nowrap ">
      <% if policy(journal).edit? %>
        <%= edit_button(edit_journal_path(journal)) %>
      <% end %>
      <% if policy(journal).destroy? %>
        <%= delete_button(journal_path(journal)) %>
      <% end %>
    </div>
  </div>
  <div class="mt-1">
    <time datetime="2021-01-27T16:35" class="flex-shrink-0 whitespace-nowrap text-sm text-gray-500"><%= display_created_at(journal) %></time>
  </div>
</li>
