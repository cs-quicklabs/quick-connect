<li class="py-3 flex border-b border-gray-200"  >
   <div class="ml-3 w-full">
      <a href="<%= journal_path(journal)%>" class="block hover:underline" target="_top">
        <p class="text-sm font-medium text-gray-900">  <%= journal.title.titleize %></p>
        </a>   
  
   <p class="flex items-center mt-1 text-sm text-gray-500"> <%=journal.body%></p>
      
     <div class=" w-full">
        <span class="flex items-center mt-1 text-sm text-gray-500"><%= display_created_at(journal) %></span>
        </div>
   </div>
 <div class="flex align-right">
      <div class="px-6 py-3 whitespace-nowrap  text-sm font-medium">
 
        <% if policy(journal).edit? %>
          <%= edit_button(edit_journal_path(journal)) %>
        <% end %>
        <% if policy(journal).destroy? %>
          <%= delete_button(journal_path(journal)) %>
        <% end %>
      </div>
      </div>
    

  </li>
