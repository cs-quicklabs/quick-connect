<main class="relative z-0 flex-1 overflow-y-auto focus:outline-none">
  <main class="">
    <div class="px-4 sm:px-6 ">
              <div class="flex items-center justify-between py-8">
                <div class="flex flex-wrap items-baseline">
                  <h1 class="text-3xl font-bold leading-tight text-gray-900">Journals</h1>
                  <p class="mt-1 ml-1 text-sm text-gray-500 truncate">(<%= @journals.count.to_s %>)</p>
                </div>
                <div class="flex mt-4 sm:mt-0 sm:ml-4">
                  <%= link_to "Add Journal", new_journal_path, class: "btn-blue" %>
                </div>
                </div>

        <div class="grid grid-cols-1 gap-4 lg:col-span-2" data-contoller="infinite-scroll">
          <section aria-labelledby="participants_section">
            <div class="overflow-hidden bg-white">
              <div class="p-4">
                  <ul class="" id="journals" data-infinite-scroll-target="entries">
                  <%= render partial: "journal", collection: @journals, as: :journal, cached: true %>
                </ul>
              </div>
            </div>
                    <div class="flex justify-end invisible mt-2 mb-6 mr-2" data-infinite-scroll-target="pagination">
              <%== render partial: "shared/paginator", locals: { pagy: @pagy } %>
            </div>
          </section>
        </div>
      </div>
  </main>
</main>
