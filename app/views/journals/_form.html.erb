<%= tailwind_form_with(model: journal, id: dom_id(journal)) do |form| %>
  <main class="max-w-7xl px-4 pt-6 pb-12 mx-auto space-y-6 lg:pb-16">
    <%= render "shared/form_messages", resource: journal, message: local_assigns[:message] %>
    <%= render "shared/form_header", title: title, subtitle: subtitle %>
    <%= form.text_field :title, "Title", autocomplete: "off" %>
       <%= form.rich_text_area :body, "Journal" %>

    <div class="flex justify-end">
      <%= form.submit "Save", class: "btn-blue" %>
    </div>
  </main>
<% end %>
