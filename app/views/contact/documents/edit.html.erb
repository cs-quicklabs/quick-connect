<%= turbo_frame_tag dom_id(@document) do %>
    <%= tailwind_form_with(model: @document, id: dom_id(@document), url: contact_document_path(@contact, @document), method: :patch) do |form| %>
      <main class="w-full px-4 pt-6 pb-12 mx-auto space-y-6 lg:pb-16">
        <%= render "shared/form_messages", resource: @document, message: local_assigns[:message] %>
        <%= render "shared/form_header", title: "Edit Document", subtitle: "A contact document can be link to contact documentation, design files, contact report or something contact related" %>
        <div>
          <%= form.text_field :link, "Link", autocomplete: "off" %>
        </div>
        <%= form.text_area :comments, "Comments(optional)", class: "form-text-field", autocomplete: "off" %>
        <div class="flex justify-end">
          <%= link_to "Back", "javascript:history.back()", class: "btn-normal" %>
          <%= form.submit "Edit Document", class: "btn-blue" %>
        </div>
      </main>
    <% end %>
<% end %>
