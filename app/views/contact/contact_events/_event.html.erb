<li class="">
  <%= turbo_frame_tag dom_id(contact_event) do %>
    <div class="flex mt-6 space-x-3">
      <div>
        <div class="text-sm text-gray-900 font-medium">
          <p class="whitespace-pre-wrap"><%= contact_event.title.upcase_first %> (<%= contact_event.life_event.name.upcase_first %>)</p>
        </div>
        <div  class=" text-sm text-gray-700 -mt-3" data-controller="show-more">
          <p style="white-space: pre-line; word-break: break-all;" data-target="show-more.truncate">
            <%=highlight_hashtag(auto_link_urls_in_text(contact_event.body.truncate(500).upcase_first)) %>
          </p>
          <p style="white-space: pre-line; word-break: break-all;" data-target="show-more.full" class="hidden">
            <%= highlight_hashtag(auto_link_urls_in_text(contact_event.body.upcase_first)) %>
          </p>
          <%if contact_event.body.strip.length > 500 %>
            <button type="button"  class=" btn-inline-edit text-blue-800 hover:text-blue-600 " data-action="click->show-more#toggle" data-target="show-more.button">
              Show more
            </button>
          <% end %>
        </div>
        <div class="mt-2 space-x-2 text-sm flex inline-block">
          <span class="font-normal text-gray-500"><%= display_date(contact_event.date) %></span>
          <div class="space-x-1">
            <% if policy([contact_event.contact, contact_event]).edit? %>
              <%= edit_button(edit_contact_contact_event_path(contact_event.contact, contact_event)) %>
            <% end %>
            <% if policy([contact_event.contact, contact_event]).destroy? %>
              <%= delete_button(contact_contact_event_path(contact_event.contact, contact_event)) %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</li>
