<li class="">
  <%= turbo_frame_tag dom_id(contact_event) do %>
    <div class="flex mt-6 space-x-3"> 
      <div>
        <div class="text-sm text-gray-900 font-medium">
          <p class="whitespace-pre-wrap"><%= contact_event.title.upcase_first %> (<%= contact_event.life_event.name.upcase_first%>)</p>
        </div>
        <div class="mt-1 text-sm text-gray-700">
          <p class="whitespace-pre-wrap"><%= contact_event.body.upcase_first %></p>
        </div>
 <div class="mt-2 space-x-2 text-sm">
          <span class="font-medium text-gray-500"><%= display_date(contact_event.date) %></span>
          <% if policy([@contact, contact_event]).edit? %>
            <%= edit_button(edit_contact_contact_event_path(@contact, contact_event)) %>
          <% end %>
          <% if policy([@contact, contact_event]).destroy? %>
            <%= delete_button(contact_contact_event_path(@contact, contact_event)) %>
          <% end %>
        </div>
      </div>
    </div>
<% end %>
</li>
