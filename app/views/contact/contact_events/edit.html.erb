<%= turbo_frame_tag dom_id(@contact_event) do %>
  <% @contact_event = @contact_event.decorate %>
  <%= tailwind_form_with(model: @contact_event, id: dom_id(@contact_event), url: contact_contact_event_path(@contact, @contact_event)) do |form| %>
    <main class="w-full mx-auto space-y-3 py-4">
      <%= render "shared/form_messages", resource: @contact_event, message: local_assigns[:message] %>
      <label for="name" class="block mt-4  text-sm font-medium text-gray-700">
        <%= "Edit #{@contact_event.life_event.name.upcase_first} " %>
      </label>
      <%= form.text_field :title, autocomplete: "off" %>
      <%= form.text_area :body, "Description", class: "form-text-field h-20" %>
      <div>
        <label for="date" class="cursor-pointer block text-sm font-medium text-gray-700">
          Date
        </label>
        <%= form.date_field :date, class: "form-text-field mt-1" %>
      </div>
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <input id="reminder" name="reminder" value="true" type="checkbox" class="cursor-pointer focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded">
          <label for="remember_me" class="block ml-2 text-sm text-gray-900 cursor-pointer">
            Add a yearly reminder for this event
          </label>
        </div>
      </div>
      <div class="flex justify-end py-3">
        <%= link_to "Back", contact_contact_events_path(@contact), class: "ml-3 btn-normal " %>
        <%= form.submit "Edit Event", class: "btn-blue" %>
      </div>
    </main>
  <% end %>
<% end %>
