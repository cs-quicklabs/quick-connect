<%= tailwind_form_with(model: phone_call, id: dom_id(phone_call), url: contact_phone_calls_path) do |form| %>
  <main class="max-w-lg px-4 pt-6 pb-12 mx-auto space-y-6 lg:pb-16">
    <%= render "shared/form_messages", resource: phone_call, message: local_assigns[:message] %>
    <%= render "shared/form_header", title: "Add New Phone Call", subtitle: "A Phone Call can be added to a contact which can help you remember important calls. " %>
    <div>
      <label for="date" class="block text-sm font-medium text-gray-700">
        The phone call happened on 
      </label>
      <%= form.date_field :date, class: "form-text-field mt-1", value: Date.today.to_formatted_s(:db), max: Date.today %>
    </div>
    <div class="w-full ">
      <label for="status" class="block text-sm font-medium text-gray-700">
        Who called?
      </label>
      <div class="block max-w-lg space-x-8 mt-1">
        <div class="inline-flex space-x-2">
          <%= form.radio_button :status, 'user', class: "mt-1 cursor-pointer ", :checked => true %>
          <%= form.label :status_user, 'You called', class:" cursor-pointer text-sm font-medium text-gray-700"  %>
        </div>
        <div class="inline-flex space-x-2 pl-4 ">
          <%= form.radio_button :status, 'contact', class: " mt-1 cursor-pointer",  :checked => false %>
          <%= form.label :status_contact, @contact.first_name.upcase_first + " called" , class:"  break-words w-56 cursor-pointer text-sm font-medium text-gray-700" %>
        </div>
      </div>
    </div>
    <%= form.text_area :body, "Description", class: "resize-y form-text-field h-24" %>
    <div class="flex justify-end">
      <%= form.submit "Add Phone Call", class: "btn-blue" %>
    </div>
  </main>
<% end %>
