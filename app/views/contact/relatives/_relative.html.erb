<li class="border-b border-gray-300">
  <%= turbo_frame_tag dom_id(relative) do %>
    <div class="flex items-center px-2 py-5 sm:px-6">
      <div class="flex items-center flex-1 min-w-0">
        <div class="flex-shrink-0">
          <%= image_tag "male-placeholder-image.png", class: "w-10 h-10 rounded-full" %>
        </div>
        <div class="flex-1 px-4 md:grid md:grid-cols-8 md:gap-4">
          <div>
            <a href="<%= contact_about_index_path(relative.contact_id)%>" class="block hover:underline col-span-3">
              <p class="text-sm font-medium text-gray-900"><%=relative.contact.decorate.display_name%></p>
              <p class="flex items-center mt-1 text-sm text-gray-500"><%= relative.relation.decorate.display_name%></p>
            </a>
          </div>
        </div>
        <div class="flex col-span-1">
          <div class="whitespace-nowrap">
            <% if policy([@contact, relative]).edit? %>
              <%= edit_button(edit_contact_relative_path(@contact, relative)) %>
            <% end %>
            <% if policy([@contact, relative]).destroy? %>
              <%= delete_button(contact_relative_path(@contact, relative)) %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</li>
