<%= turbo_frame_tag dom_id(@note) do %>
  <%= tailwind_form_with(model: @note, id: dom_id(@note), url: contact_note_path(@contact, @note)) do |form| %>
    <main class="w-full mx-auto space-y-2">
      <%= render "shared/form_messages", resource: @note, message: local_assigns[:message] %>
      <%= render "shared/form_header", title: "Add New Note", subtitle: "A note can be added to a contact which can help you remember important things. " %>
      <%= form.text_field :title,  autocomplete: "off"%>
      <%= form.text_area :body, "Description", class: "form-text-field h-24" %>
      <div class="flex justify-end">
        <%= form.submit "Edit Note", class: "btn-blue" %>
      </div>
    </main>
  <% end %>
<% end %>
