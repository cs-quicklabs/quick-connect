<%= turbo_frame_tag dom_id(note) do %>
  <li >
    <div class="flex mt-6 space-x-3">
      <div>
        <div class="text-sm text-gray-900 font-medium">
          <p class="whitespace-pre-wrap"><%= note.title.upcase_first %></p>
        </div>
        <div class="mt-1 text-sm text-gray-700">
          <p class="whitespace-pre-wrap"><%= note.body.upcase_first %></p>
        </div>
        <div class="mt-2 space-x-2 text-sm">
          <span class="font-medium text-gray-500"><%= display_created_at(note) %></span>
          <% if policy([@contact, note]).edit? %>
            <%= edit_button(edit_contact_note_path(@contact, note)) %>
          <% end %>
          <% if policy([@contact, note]).destroy? %>
            <%= delete_button(contact_note_path(@contact, note)) %>
          <% end %>
        </div>
      </div>
    </div>
  </li>
<% end %>
