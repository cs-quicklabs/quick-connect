<%= turbo_frame_tag dom_id(gift) do %>
  <li >
    <div class="flex mt-6 space-x-3">
      <div>
        <div class="text-sm text-gray-900 font-medium">
          <p class="whitespace-pre-wrap"><%= gift.name.upcase_first %></p>
        </div>
        <div class="mt-1 text-sm text-gray-700">
          <p class="whitespace-pre-wrap"><%= gift.body.upcase_first %></p>
        </div>
        <div class="mt-2 space-x-2 text-sm">
         <span class="font-medium text-gray-500"><%= gift.status%> on 
          <span class="font-medium text-gray-500"><%= display_date(gift.date) %></span>
          <% if policy([@contact, gift]).edit? %>
            <%= edit_button(edit_contact_gift_path(@contact, gift)) %>
          <% end %>
          <% if policy([@contact, gift]).destroy? %>
            <%= delete_button(contact_gift_path(@contact, gift)) %>
          <% end %>
        </div>
      </div>
    </div>
  </li>
<% end %>
