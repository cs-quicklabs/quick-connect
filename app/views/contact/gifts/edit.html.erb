<%= turbo_frame_tag dom_id(@gift) do %>
  <%= tailwind_form_with(model: @gift, id: dom_id(@gift), url: contact_gift_path(@contact, @gift)) do |form| %>
    <main class="w-full mx-auto space-y-2 py-6">
      <%= render "shared/form_messages", resource: @gift, message: local_assigns[:message] %>
 <%= form.text_field :name, "Name", autocomplete: "off" %>
    <%= form.text_area :body, "Description", class: "form-text-field" %>
    <div class="w-full ">
      <label for="status" class="block text-sm font-medium text-gray-700">
        Status
      </label>
      <div class="block max-w-lg space-x-8 mt-2">
      <div class="inline-flex space-x-2">
         <%= form.radio_button :status, 'recieved', class: "mt-1 " %>
       <%= form.label :status_recieved, 'Recieved', class:" text-sm font-medium text-gray-700"  %>
</div>
<div class="inline-flex space-x-2 pl-4 ">
      <%= form.radio_button :status, 'given', class: " mt-1" %> 
      <%= form.label :status_given, 'Given' , class:" text-sm font-medium text-gray-700" %>
      </div>
   </div>
    </div>
    <div>
      <label for="date" class="block text-sm font-medium text-gray-700">
        Date
      </label>
      <%= form.date_field :date, class: "form-text-field mt-1", value: Date.today.to_formatted_s(:db) %>
    </div>
      <div class="flex justify-end">
        <%= form.submit "Edit Gift", class: "btn-blue" %>
      </div>
    </main>
  <% end %>
<% end %>
