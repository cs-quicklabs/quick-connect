<main class="relative z-0 flex-1 overflow-y-auto focus:outline-none">
  <%= render partial: "contact/title", locals: { contact: @contact } %>
  <main class="pb-8">
    <div class="">
      <!-- Main 3 column grid -->
      <div class="grid items-start grid-cols-1  lg:grid-cols-3 ">
        <!-- Left column -->
        <div class="grid grid-cols-1 lg:col-span-2" id="project_gifts"  data-controller="infinite-scroll" >
          <section aria-labelledby="participants_section">
            <h2 class="sr-only" id="section-1-title">gifts</h2>
            <div class="overflow-hidden bg-white" >
              <div class="">
                <table class="table table-fixed" style="table-layout:fixed;">
                  <thead class="bg-gray-50">
                    <tr>
                      <th scope="col" class="table-head">
                        Name
                      </th>
                      <th scope="col" class="table-head">
                        Description
                      </th>
                      <th scope="col" class="table-head">
                        Status
                      </th>
                      <th scope="col" class="table-head">
                        Date
                      </th>
                      <th scope="col" class="table-head">
                        Action
                      </th>
                    </tr>
                  </thead>
                  <tbody class="table-body " id="gifts" data-infinite-scroll-target="entries">
                    <%= render partial: "gift", collection: @gifts, as: :gift, cached: true %>
                  </tbody>
                </table>
              </div>
              <div class="flex justify-end mt-2 mb-6 mr-2 invisible" data-infinite-scroll-target="pagination">
                <%== render partial: "shared/paginator", locals: { pagy: @pagy } %>
              </div>
            </div>
          </section>
        </div>
        <!-- Right column -->
        <% if policy([@contact, @gift]).create? %>
          <div class="grid grid-cols-1 gap-4 xl:border-l xl:border-gray-200">
            <section aria-labelledby="add-participant-section">
              <h2 class="sr-only" id="section-2-title">Add New gift</h2>
              <div class="overflow-hidden bg-white">
                <div class="px-4">
                  <%= render partial: "form", locals: { gift: @gift } %>
                </div>
              </div>
            </section>
          </div>
        <% end %>
      </div>
    </div>
  </main>
  <div class="pt-4 pl-16 pr-16">
  </div>
</main>
