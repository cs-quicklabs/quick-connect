<tr id="<%= dom_id debt %>" class="h-12">
  <td class="table-cell w-full">
    <div  class=" text-sm text-gray-700" data-controller="show-more">
      <p style="white-space: pre-line; word-break: break-all;" data-target="show-more.truncate">
        <%= highlight_hashtag(auto_link_urls_in_text(debt.title.truncate(100).upcase_first)) %>
      </p>
      <p style="white-space: pre-line; word-break: break-all;" data-target="show-more.full" class="hidden">
        <%= highlight_hashtag(auto_link_urls_in_text(debt.title.upcase_first)) %>
      </p>
      <% if debt.title.strip.length > 100 %>
        <button type="button"  class=" btn-inline-edit text-blue-800 hover:text-blue-600" data-action="click->show-more#toggle" data-target="show-more.button">
          Show more
        </button>
      <% end %>
    </div>
  </td>
  <td class="table-cell w-full">
    <div class="text-sm  whitespace-nowrap">
      <% if debt.owed_by === "contact" %>
        <span class="font-normal "><%= debt.contact.decorate.display_name %></span>
      <% else %>
        <span class="font-normal ">You</span>
      <% end %>
    </div>
  </td>
  <td class="table-cell w-full">
    <span><%= debt.amount.upcase_first %></span>
  </div>
</td>
<td class="table-cell whitespace-nowrap">
  <div class=" space-x-2 text-sm">
    <span class="font-normal text-gray-500"><%= display_date(debt.due_date) %></span>
  </td>
  <td class="table-cell whitespace-nowrap space-x-1">
    <% if policy([debt.contact, debt]).edit? %>
      <%= edit_button(edit_contact_debt_path(debt.contact, debt, script_name: "/#{debt.contact.account.id}")) %>
    <% end %>
    <% if policy([debt.contact, debt]).destroy? %>
      <%= delete_button(contact_debt_path(debt.contact, debt, script_name: "/#{debt.contact.account.id}")) %>
    <% end %>
  </div>
</td>
</tr>
