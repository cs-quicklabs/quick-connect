<main class="relative z-0 flex-1 overflow-y-auto focus:outline-none">
  <main class="">
    <!-- Main 3 column grid -->
    <div class="grid items-start grid-cols-1  lg:grid-cols-3">
      <!-- Left column -->

      <div class="grid grid-cols-1 col-span-1 border-r   border-gray-200 overflow-y-auto h-screen max-content top-16 overscroll-contain min-h-full">
        <section aria-labelledby="add-participant-section h-full">
          <div class="overflow-hidden bg-white">
            <div class="px-4 sm:px-6 py-6">
              <div class="flex items-center justify-between ">
                <div class="flex flex-wrap items-baseline ">
                  <h1 class="text-3xl font-bold leading-tight text-gray-900">Contacts</h1>
                  <p class="mt-1 ml-1 text-sm text-gray-500 truncate">(<%= @contacts.count.to_s %>)</p>
                </div>
                <div class="flex sm:mt-0 sm:ml-4 ">
                  <%= link_to "Add Contact", new_contact_path, class: "btn-blue " %>
                </div>
              </div>
              <div class=" flex space-x-4 pt-6">
                <div class="flex-1 min-w-0 "  data-behavior="autocomplete" data-controller="nav-search" data-nav-search-url-value="/search/contacts" >
                  <label for="search" class="sr-only">Search</label>
                  <div class="relative rounded-md shadow-sm" >
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                      <!-- Heroicon name: solid/search -->
                      <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
                      </svg>
                    </div>
                    <input type="search" name="search" id="search" class="block w-full  pl-10 form-text-field " placeholder="Search" data-nav-search-target="input">
                  </div>
                  <div class="relative">
                    <div class="absolute left-0 z-10 block w-full mt-2 origin-top-right bg-white rounded-md shadow-lg  focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="options-menu">
                      <ul data-nav-search-target="results">
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <nav class="flex-1 min-h-full overflow-y-auto h-screen  max-content  overflow-y-scroll  overscroll-contain" aria-label="Directory" data-controller="infinite-scroll" >
              <div class="relative h-full">
            <nav class="flex-1  min-h-full  overflow-y-auto h-screen  max-content  overflow-y-scroll  overscroll-contain" aria-label="Directory">
              <div class="relative h-full px-6 ">
                <ul role="list" class="relative z-0 divide-y divide-gray-200">
                  <%= render partial: "contact", collection: @contacts, as: :contact, cached: false %>
                </ul>
              </div>
            <div class="flex justify-end mt-2 mb-6 mr-2 invisible" data-infinite-scroll-target="pagination">
              <%= render partial: "shared/paginator", locals: { pagy: @pagy } %>
            </div>
            </nav>
   
        </div>
      </section>
      </div>
      <!-- Right column -->
      <div class="grid grid-cols-1 lg:col-span-2">
        <section aria-labelledby="participants_section">
          <div class="overflow-hidden bg-white">
            <div class="">
            </div>
            <article class=" h-[calc(100vh-6.0rem)]  max-content  overflow-y-scroll   overscroll-contain">
              <!-- contact header -->
              <div id="profile" class="h-full">
              </div>
            </article>
          </div>
        </section>
      </div>
    </div>
  </main>
</main>
