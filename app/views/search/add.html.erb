<% if @contacts.count > 0 %>
  <% @contacts.each do |contact| %>
    <li role="option"  @click="isShowing = false; document.getElementById('search').value='<%= contact.decorate.display_name %>'" class="cursor-pointer block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900 hover:underline" id="batch-contact" data-reflex="click->Batch#add" data-contact-id="<%= contact.id %>" data-batch-id="<%= @batch.id %>">
      <p  ><%= contact.decorate.display_name %></p>
    </li>
  <% end %>
<% else %>
  <a role="option" aria-disabled="true" tabindex="-1" @click="isShowing = false; document.getElementById('search').value=''" href="<%= new_contact_path %>" class="cursor-pointer block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900 hover:underline" ><input type="button" class="display-none" disabled="disabled">Add Contact </a>
<% end %>
