<li class="py-3 flex border-b border-gray-200"  >
   <div class=" w-full">
      <a href="<%= release_note_path(release_note)%>" class="block hover:underline" target="_top">
        <p class="text-sm font-medium text-gray-900">  <%= release_note.title.titleize %></p>
        </a>   
  
   <div class=" mt-1 text-sm font-normal text-gray-500 line-clamp-2"> <%=release_note.body%></div>
      
     <div class=" w-full">
        <span class="inline-flex font-normal items-center mt-1 text-sm text-gray-500"><%= display_created_at(release_note) %></span>
        </div>
   </div>
 <div class="flex align-right">
      <div class="px-6 py-3 whitespace-nowrap  text-sm font-medium">
 
        <% if policy(release_note).edit? %>
          <%= edit_button(edit_release_note_path(release_note)) %>
        <% end %>
        <% if policy(release_note).destroy? %>
          <%= delete_button(release_note_path(release_note)) %>
        <% end %>
      </div>
      </div>
    

  </li>
