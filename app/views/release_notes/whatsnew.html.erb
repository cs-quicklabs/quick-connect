 <main class="relative z-0 flex-1 overflow-x-scroll focus:outline-none">
  <div class="px-4 sm:px-6 lg:px-8 py-6">

    <div class="relative mx-auto max-w-[37.5rem] pt-12 text-center pb-12">
      <h1 class="text-4xl font-extrabold tracking-tight text-slate-900 sm:text-5xl">What's New</h1>
      <p class="mt-4 text-base leading-7 text-slate-600">Stay up to date with all of the latest additions and improvements we've made to Kutumb.</p>
       </div>
         <div class=" text-center ">
        <% if policy(ReleaseNote).create? %>
         <%= link_to "Add Release Note", new_release_note_path, class: "btn-blue  " %>
         </div>
  <% end %>
  </div>
  <div class="relative mx-auto max-w-5xl px-4 sm:px-6 lg:px-8">
   <% if policy(ReleaseNote).create? %>
   <%= render partial: "release", collection: @drafts, as: :release_note, cached: true %>
   <% end %>  
    <%= render partial: "release", collection: @release_notes, as: :release_note, cached: true %>
  </div>
</main>
