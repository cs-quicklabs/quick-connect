<%contact=contact.decorate%>
<li class="my-1 col-span-1 bg-white rounded-lg  border divide-gray-200 shadow-sm ">
  <div class="flex w-full items-center justify-between space-x-6 p-3 ">
    <div class="flex-1 space-y-1">
      <div class="flex items-center space-x-3">
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
          <div class="relative flex items-center space-x-3 ">
            <div class="flex-shrink-0">
              <%= image_tag "male-placeholder-image.png", style: "margin-left: 0.5rem;", class: "w-10 h-10 rounded-full inline-flex" %>
            </div>
            <div class="min-w-0 flex-1 -mt-5">
              <a type="button" href="/<%= contact.account.id %>/contacts/<%= contact.id %>/timeline" class="bg-white cursor-pointer hover:underline " target= "_top">
                <span class="absolute inset-0" aria-hidden="true"></span>
                <p class="text-sm font-medium text-gray-900 whitespace-nowrap"><%= contact.display_name %>
                </a>
                <p class="mt-1  text-sm text-gray-500 inline-flex space-x-1">
                  <% if !contact.phone.blank? %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="inline-flex" style="width: .8rem;height:.8rem" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
                    </svg>
                    <span class="text-sm text-gray-500  inline-flex w-56 -mt-1">    <%= contact.phone %> </span>
                  <% else %>
                    <svg class="inline-flex" style="width: .8rem;height:.8rem" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                      <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                      <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                    </svg>
                    <span class="text-sm text-gray-500  inline-flex w-56 -mt-1">  <%= contact.display_email %>  </span>
                  <% end %>
                </p>
              </div>
            </div>
          </div>
          <div class="space-x-1 -mt-2 align-top flex">
            <% touched = "<span class=' cursor-pointer' id='untrack' style='flex-direction: column;'   >
                              <svg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke-width='1.5' stroke='currentColor' class='w-6 h-6 text-green-500'>
                                <path stroke-linecap='round' stroke-linejoin='round' d='M9 12.75L11.25 15 15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.745 3.745 0 01-1.043 3.296 3.745 3.745 0 01-3.296 1.043A3.745 3.745 0 0112 21c-1.268 0-2.39-.63-3.068-1.593a3.746 3.746 0 01-3.296-1.043 3.745 3.745 0 01-1.043-3.296A3.745 3.745 0 013 12c0-1.268.63-2.39 1.593-3.068a3.745 3.745 0 011.043-3.296 3.746 3.746 0 013.296-1.043A3.746 3.746 0 0112 3c1.268 0 2.39.63 3.068 1.593a3.746 3.746 0 013.296 1.043 3.746 3.746 0 011.043 3.296A3.745 3.745 0 0121 12z' />
                              </svg>
                          </span>" %>
            <%= link_to (raw(touched)), touched_contact_path(contact), type:"button", class: "", data: {
                                                                  controller: "confirmation tooltip",
                                                                  "confirmation-message-value": "Are you sure you want to mark as touched to this contact? Marking this as touched means you took a followup with this contact today.",
                                                                  action: "confirmation#confirm ",
                                                              "tooltip-content": "Mark As Touched" }  %>
            <% html = "<span class=' cursor-pointer' id='untrack' style='flex-direction: column;'   >
                          <svg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke-width='1.5' stroke='currentColor' class='w-6 h-6 text-red-500 '>
                               <path stroke-linecap='round' stroke-linejoin='round' d='M9.75 9.75l4.5 4.5m0-4.5l-4.5 4.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z' />
                          </svg>                                                                                                                                                                          
                      </span>" %>
            <%= link_to (raw(html)), untrack_contact_path(contact), class: "", data: {
                                                                  controller: "confirmation tooltip",
                                                                  "confirmation-message-value": "Are you sure you want to untrack this contact? Marking this as untrack means it will not show up in follow up list again",
                                                                  action: "confirmation#confirm",
                                                               "tooltip-content": "Do Not Track" }%>
          </div>
        </div>
        <div>
          <div class="-mt-px flex ">
            <p class="text-sm font-normal text-gray-500 ml-3" >Last Activity: <%= display_date(contact.touched_at) %> </p>
          </div>
          <div class="-mt-px flex p-1 ">
            <div  class="inline-flex "id="contact-labels" >
              <%= render partial: "labels", locals: { contact_labels: contact.labels } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </li>
