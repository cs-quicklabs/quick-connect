<%= turbo_frame_tag dom_id(comment) do %>
  <li class="  w-full px-4 py-2 sm:px-6">
    <div class=" w-full flex">
      <div class=" flex flex-1">
        <p class="whitespace-pre-wrap text-sm "><%= comment.title.upcase_first %></p>
      </div>
      <div class="text-right  whitespace-nowrap">
        <% if policy(comment).edit? %>
          <%= edit_button(edit_journal_comment_path(comment)) %>
          <%= delete_button(journal_comment_path(comment)) %>
        <% end %>
      </div>
    </div>
    <div class=" flex flex-1  whitespace-nowrap  text-sm ">
      <span class="text-gray-500 text-sm"><%= display_created_at(comment) %></span>
    </div>
  </li>
<% end %>
