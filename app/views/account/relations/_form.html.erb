  <%= tailwind_form_with(model: relation, id: dom_id(relation), url: account_relations_path) do |form| %>
  <div class="space-y-6">
    <%= render "shared/form_messages", resource: relation, message: local_assigns[:message] %>
    <%= render "shared/form_header", title: "Relations", subtitle: "You can define various relations of your family." %>
    <%= form.text_field :name, "Add New Relation", autocomplete: "off" %>
