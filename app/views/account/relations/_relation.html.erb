<%= turbo_frame_tag dom_id(relation) do %>
  <li class="flex py-4 border-b border-gray-200">
    <div class="flex w-full ml-3">
      <p class="w-full text-sm font-normal text-gray-900"><%= relation.name.upcase_first %></p>
      <div class="flex justify-end space-x-2">
        <%= edit_button(edit_account_relation_path(relation)) %>
        <%= delete_button(account_relation_path(relation)) %>
      </div>
    </div>
  </li>
<% end %>
