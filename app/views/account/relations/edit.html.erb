<%= turbo_frame_tag dom_id(@relation) do %>
  <%= tailwind_form_with(model: @relation, id: dom_id(@relation), url: account_relation_path(@relation)) do |form| %>
    <div class="mt-2 text-sm text-red-700">
      <% if local_assigns[:messages] && defined?(messages) && !messages.nil? %>
        <ul class="pl-1 space-y-1 pt-1">
          <% messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
    <li class="flex w-full py-4 border-b border-gray-200">
      <div class="w-full ">
        <%= form.text_field :name, "Edit Relation", autocomplete: "off", class: "form-text-field flex flex-1 flex-auto " %>
      </div>
      <div class="flex justify-end">
        <%= form.submit "Save", class: "btn-blue ml-3 flex-none mt-6 " %>
      </div>
    </div>
  </li>
<% end %>
<% end %>
