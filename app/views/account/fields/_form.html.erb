  <%= tailwind_form_with(model: field, id: dom_id(field), url: account_fields_path) do |form| %>
  <div class="space-y-6">
    <%= render "shared/form_messages", resource: field, message: local_assigns[:message] %>
    <%= render "shared/form_header", title: "Add New Contact Field Type", subtitle: "You can define custom field which can be applied on contacts." %>
    <%= form.text_field :name, "Field Type", autocomplete: "off", class: "form-text-field" %>
    <%= form.text_field :protocol, "Protocol (optional)", autocomplete: "off", class: "form-text-field" %>
    <%= form.text_field :icon, "Icon (optional)", autocomplete: "off", class: "form-text-field" %>

    <!-- Hack ends here -->
   
    <div class="flex justify-end">
      <%= form.submit "Save", class: "btn-blue" %>
    </div>
  </div>
<% end %>
