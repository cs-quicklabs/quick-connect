<%= turbo_frame_tag dom_id(@activity) do %>
  <%= form_with(model: @activity, id: dom_id(@activity), url: account_activity_path(@activity)) do |form| %>
    <div class="mt-2 text-sm text-red-700">
      <% if local_assigns[:messages] && defined?(messages) && !messages.nil? %>
        <ul class="pl-1 space-y-1 pt-1">
          <% messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
    <li class="flex w-full py-4 border-b border-gray-200">
      <div class="w-full">
        <label for="owned_by" class="block text-sm font-medium text-gray-700 mb-1">
          Edit Activity
        </label>
        <div class="flex">
          <input type='text' id="activity_name" name="activity[name]" id="user_password" class="form-text-field flex-flex-1" value="<%= @activity.name %>"  />
          <div class="flex justify-end ">
            <%= form.submit "Save", class: "btn-blue ml-3 flex-none  " %>
          </div>
        </div>
      </div>
    </li>
  <% end %>
<% end %>
