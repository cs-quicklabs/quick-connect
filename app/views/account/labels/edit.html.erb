<%= turbo_frame_tag dom_id(@label) do %>
  <%= tailwind_form_with(model: @label, id: dom_id(@label), url: account_label_path(@label)) do |form| %>
    <div class="mt-2 text-sm text-red-700">
      <% if local_assigns[:messages] && defined?(messages) && !messages.nil? %>
        <ul class="pl-1 space-y-1 pt-1">
          <% messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
    <li class="flex w-full py-4 border-b border-gray-200 ">
      <div class="w-full  space-y-6">
        <%= form.text_field :name, "Edit Label", autocomplete: "off", class: "form-text-field" %>
        <div class="flex">
          <div class="flex items-center ml-2 text-sm ">
            <input <%= @label.color == "gray" ? "checked" : "NA" %> type="radio" id="label_gray" name="label[color]" value="gray" class="w-4 h-4 text-gray-600 border-gray-300 cursor-pointer focus:ring-gray-500" aria-labelledby="pricing-plans-0-label" aria-describedby="pricing-plans-0-description-0 pricing-plans-0-description-1">
            <span class="ml-1 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
              Gray
            </span>
          </div>
          <div class="flex items-center ml-4 text-sm">
            <input <%= @label.color == "red" ? "checked" : "NA" %> type="radio" id="label_red" name="label[color]" value="red" class="w-4 h-4 text-red-600 border-gray-300 cursor-pointer focus:ring-red-500" aria-labelledby="pricing-plans-0-label" aria-describedby="pricing-plans-0-description-0 pricing-plans-0-description-1">
            <span class="ml-1 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">
              Red
            </span>
          </div>
          <div class="flex items-center ml-4 text-sm">
            <input <%= @label.color == "yellow" ? "checked" : "NA" %> type="radio" id="label_yellow" name="label[color]" value="yellow" class="w-4 h-4 text-yellow-600 border-gray-300 cursor-pointer focus:ring-yellow-500" aria-labelledby="pricing-plans-0-label" aria-describedby="pricing-plans-0-description-0 pricing-plans-0-description-1">
            <span class="ml-1 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800">
              Yellow
            </span>
          </div>
          <div class="flex items-center ml-4 text-sm">
            <input <%= @label.color == "green" ? "checked" : "NA" %> type="radio" id="label_green" name="label[color]" value="green" class="w-4 h-4 text-green-600 border-gray-300 cursor-pointer focus:ring-green-500" aria-labelledby="pricing-plans-0-label" aria-describedby="pricing-plans-0-description-0 pricing-plans-0-description-1">
            <span class="ml-1 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
              Green
            </span>
          </div>
          <div class="flex items-center ml-4 text-sm">
            <input <%= @label.color == "blue" ? "checked" : "NA" %> type="radio" id="label_blue" name="label[color]" value="blue" class="w-4 h-4 text-blue-600 border-gray-300 cursor-pointer focus:ring-blue-500" aria-labelledby="pricing-plans-0-label" aria-describedby="pricing-plans-0-description-0 pricing-plans-0-description-1">
            <span class="ml-1 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
              Blue
            </span>
          </div>
        </div>
        <div class="flex justify-end  ">
          <%= form.submit "Save", class: "btn-blue  " %>
        </div>
      </div>
    </li>
  <% end %>
<% end %>
