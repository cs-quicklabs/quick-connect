
<%= turbo_frame_tag dom_id(@label) do %>
  <%= form_with(model: @label, id: dom_id(@label), url: account_label_path(@label)) do |form| %>
    <% if local_assigns[:messages] && defined?(messages) && !messages.nil? %>
      <% messages.each do |message| %>
        <p class="mt-2 text-sm text-red-600"><%= message %></p>
      <% end %>
    <% end %>
    <div class="flex  pt-2 ">
        <div class="w-full">
          <label for="name" class="block  text-sm font-medium text-gray-700">
            Label
          </label>
          <%= form.text_field :name, class: "form-text-field", autocomplete: "off", class: "form-text-field" %><br>
        </div>
        </div>
    <!-- Hack ends here -->
    <div class="flex ">
      <label for="label_color" class="text-sm">Appearance</label>
      <div class="flex items-center ml-2 text-sm ">
        <input checked type="radio" name="label[color]" value="gray" class="w-4 h-4 text-gray-600 border-gray-400 cursor-pointer focus:ring-gray-500" aria-labelledby="pricing-plans-0-label" aria-describedby="pricing-plans-0-description-0 pricing-plans-0-description-1">
        <span class="ml-1 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
          Gray
        </span>
      </div>
      <div class="flex items-center ml-4 text-sm">
        <input type="radio" name="label[color]" value="red" class="w-4 h-4 text-red-600 border-red-400 cursor-pointer focus:ring-red-500" aria-labelledby="pricing-plans-0-label" aria-describedby="pricing-plans-0-description-0 pricing-plans-0-description-1">
        <span class="ml-1 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">
          Red
        </span>
      </div>
      <div class="flex items-center ml-4 text-sm">
        <input type="radio" name="label[color]" value="yellow" class="w-4 h-4 text-yellow-600 border-yellow-400 cursor-pointer focus:ring-yellow-500" aria-labelledby="pricing-plans-0-label" aria-describedby="pricing-plans-0-description-0 pricing-plans-0-description-1">
        <span class="ml-1 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800">
          Yellow
        </span>
      </div>
      <div class="flex items-center ml-4 text-sm">
        <input type="radio" name="label[color]" value="green" class="w-4 h-4 text-green-600 border-green-400 cursor-pointer focus:ring-green-500" aria-labelledby="pricing-plans-0-label" aria-describedby="pricing-plans-0-description-0 pricing-plans-0-description-1">
        <span class="ml-1 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
          Green
        </span>
      </div>
        <div class="flex items-center ml-4 text-sm">
        <input type="radio" name="label[color]" value="blue" class="w-4 h-4 text-blue-600 border-blue-400 cursor-pointer focus:ring-blue-500" aria-labelledby="pricing-plans-0-label" aria-describedby="pricing-plans-0-description-0 pricing-plans-0-description-1">
        <span class="ml-1 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
          Blue
        </span>
       </div>
       </div>
        <div class="flex justify-end mr-6 ">
          <%= form.submit "Save", class: "btn-blue  " %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
