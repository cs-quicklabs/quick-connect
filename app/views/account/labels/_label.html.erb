<%= turbo_frame_tag dom_id(label) do %>
  <li class="flex py-4 border-b border-gray-200">
    <div class="flex items-center w-full ml-3">
      <div class="flex-shrink-0 px-1 py-1 rounded-full border-2 m2-2 border-<%= label.color %>-400  bg-<%= label.color %>-400" ></div>
      <p class="w-full ml-2 text-sm font-medium text-gray-900">
        <%= label.name.titleize %></p>
      <div class="flex justify-end space-x-2">
        <%= edit_button(edit_account_label_path(label)) %>
        <%= delete_button(account_label_path(label)) %>
      </div>
    </div>
  </li>
<% end %>
