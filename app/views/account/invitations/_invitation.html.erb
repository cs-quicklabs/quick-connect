<%= turbo_frame_tag dom_id(invitation) do %>
  <li class="flex py-4 border-b border-gray-200">
    <div class="flex items-center w-full ml-3 ">
      <p class=" text-sm font-normal text-gray-900 leading-none " style="width:50%;overflow-wrap: break-word; word-break: break-all; vertical-align: text-bottom; ">
        <%= invitation.decorate.display_name %></p>
         <p class="w-full  text-sm font-normal text-gray-900 " style="width:50%;overflow-wrap: break-word; word-break: break-all; vertical-align: text-top;  ">
        <%= invitation.email%></p>
      <div class="flex justify-end ">
      <%@user= invitation.user%>
      <% if @user.permission=="true"%>
       <%= link_to "Deactivate"," #", class: "btn-inline-delete", data: {
                                 controller: "confirmation",
                                 "confirmation-message-value": "Are you sure you want to deactivate user",
                                 action: "confirmation#confirm", reflex: "click->InvitationReflex#deactivate", id: invitation.id 
                               }%>

        <% else %>
          <%= link_to "Activate"," #", class: "btn-inline-edit", data: {
                                 controller: "confirmation",
                                 "confirmation-message-value": "Are you sure you want to activate user",
                                 action: "confirmation#confirm",  reflex: "click->InvitationReflex#activate", id: invitation.id 
                               }%>

          <% end %>
      </div>
    </div>
  </li>

<% end %>